<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/row_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/text_padding"
        android:paddingTop="@dimen/text_padding"
        android:paddingBottom="@dimen/text_padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#ff02029b"
        android:textSize="20dip"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/row_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/text_padding"
        android:paddingBottom="@dimen/text_padding"
        android:layout_alignLeft="@+id/row_title"
        android:layout_below="@+id/row_title"
        android:layout_toLeftOf="@+id/row_image"
        android:textSize="16dip"
        android:textColor="#000000"
        android:textIsSelectable="false" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/row_image"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_marginBottom ="@dimen/image_margin"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/row_description"
        android:layout_alignRight="@+id/row_title"
        android:layout_below="@+id/row_title"/>

</RelativeLayout >
